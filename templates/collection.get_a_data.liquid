{% layout none %}
{%- assign limit = 16 -%}
<style>.__hdn__{position:absolute;left:-300%;top:-300%;opacity:0;height:1px;width:1px;}</style><div id="collectionJson" class="__hdn__">{{collection | json}}</div><div id="collectionProductsCount" class="__hdn__">{{collection.all_products_count}}</div><div id="collectionTags" class="__hdn__">{% for tag in collection.all_tags %}<span>{{tag|json}}</span>{% endfor %}</div>{% paginate collection.products by limit %}<div id="collections" class="__hdn__">{% for product in collection.products %}<div class="productJson">{{product|json}}</div><br><div class="imageAlt">{{product.featured_image.alt}}</div><div class="imageHeight">{{product.featured_image.height}}</div><div class="imageWidth">{{product.featured_image.width}}</div><div class="featuredImage">{"src": "{{product.featured_image}}", "alt": "{{product.featured_image.alt}}", "height": "{{product.featured_image.height}}", "width": "{{product.featured_image.width}}"}</div>{% endfor %}</div>{% endpaginate %}