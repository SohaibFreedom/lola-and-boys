{% schema %}
{
  "name": "Kids Workshop Columns",
  "settings": [
    {
      "type": "text",
      "label": "Heading",
      "id": "heading",
      "default": "Your Heading Here"
    },
    {
      "type": "textarea",
      "label": "Description",
      "id": "description",
      "default": "Your description here."
    },
    {
  "type": "liquid",
  "label": "Liquid Code",
  "id": "liquid_code"
}

  ],
   "presets": [{
    "name": "Liquid with text"
  }]

}
{% endschema %}

<div class="kids-workshop-columns">
  <div class="column-left">
    <div class="liquid-code">
     {{ section.settings.liquid_code }}
    </div>
  </div>

  <div class="column-right">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.description }}</p>
  </div>
</div>


<style>
  .kids-workshop-columns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    max-width:1100px;
    margin:0 auto;
  }

  .kids-workshop-columns .column-left, 
  .kids-workshop-columns .column-right {
    padding: 20px;
  }

  .kids-workshop-columns ul {
   padding:0;
  }

  .kids-workshop-columns h2 {
    font-size: 28px;
    margin-bottom: 10px;
  }

  .kids-workshop-columns p {
    font-size: 18px;
  }
</style>
