<div class="page-banner-section">
	<div class="main-container">
		<div class="row">
			<div class="wi-100">
				<div class="page-banner-content">
					<div class="page-banner-content-inner">
						<h1>{{ page.title }}</h1>
						<p>{{ section.settings.description }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% schema %}
  {
    "name": "Banner Section",
    "settings": [
		{
          "id": "description",
          "type": "text",
          "label": "Description"
        }
	]
  }
{% endschema %}