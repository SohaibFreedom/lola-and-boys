<div class="two-cols-background">
  {% for block in section.blocks %}
    <div
      class="two-col-item"
      style="background: url('{{ block.settings.bg_image | img_url: 'master' }}') no-repeat center center; background-size: cover;"
    >
      {% if block.settings.show_plus %}
        <div class="toggle-wrapper" style="top:{{ block.settings.top }};left:{{ block.settings.left }};">
          <div class="toggleButton icon plus">+</div>
          <div class="details hidden">
            <h2>{{ block.settings.title }}</h2>
            <p>{{ block.settings.price }}</p>
            <a href="{{ block.settings.link }}" class="viewDetails">View Details</a>
          </div>
        </div>
      {% endif %}
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Two Columns Background",
  "max_blocks": 2,
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background Image",
          "info": "Upload an image for the column background"
        },
        {
          "type": "checkbox",
          "id": "show_plus",
          "label": "Show Plus Icon",
          "default": false
        },
          {
          "type": "text",
          "id": "title",
          "label": "title"
        },
          {
          "type": "text",
          "id": "price",
          "label": "price"
        },
          {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
         {
          "type": "text",
          "id": "top",
          "label": "Top"
        },
              {
          "type": "text",
          "id": "left",
          "label": "left"

        }

      ]
    }
  ],
  "presets": [
    {
      "name": "Two Columns Background",
      "category": "Custom"
    }
  ]
}
{% endschema %}
