<style>
  .account-heading_text{
    font-size: 52px;
    line-height: 1;
    margin-top: 0;
    margin-bottom: 100px;
    text-align: center;
    color: #000;
    font-weight: 700;
  }
  .account-list{
  	list-style: none;
  	margin: 0;
  	display: grid;
      row-gap: 32px;
  	padding: 16px;
  	-webkit-box-align: center;
  	align-items: center;
  }
  .account-list li a{
      font-size: 24px;
      font-weight: 400 !important;
      line-height:  1.4;
      color: #000;
      padding-bottom: 2px;
  }
  .account-list li a.active {
    font-weight: 600 !important;
    border-bottom: #000 1px solid;
  }
  .account-row{
  	display: grid;
  	grid-template-columns: 1fr 2fr;
  	gap: 30px;
  }
  .account-list li{
    margin: 0;
  }
  .accordion-title{
  	line-height: 1.5;
      font-weight: 500;
      margin: 0;
      font-size: 18px;
      color: rgb(35, 30, 32);
      padding: 0;
      letter-spacing: 0;
      text-transform: capitalize;
  }
  .accordion-box{
  	padding: 14px 20px;
  	display: flex;
  	align-items: center;
  	justify-content: space-between;
      cursor: pointer;
  }
  .accordion-icon{
  	width: 25px;
  	height: 25px;
      flex: 0 25px;
      display: flex;
      align-items: center;
      justify-content: center;
  }
  .accordion-icon:after{
      content: '+';
      font-size: 20px;
  }
  .account-accordion.active .accordion-icon:after{
    content: '-';
  }
  .account-accordion .accordion-content{
  	display: none;
      padding: 10px 20px;
      border-top: 1px dashed #ddd;
  }
  .account-accordion{
    border-bottom: 1px solid #e9e9e9;
    border-radius: 6px;
  }
  .account-accordion.active .accordion-content{
  	display: block;
  }
  .accordion-content p:last-child{
    margin-bottom: 0;
  }
  .accordion-content p{
  	margin-top: 0;
  	font-size: 14px;
  	font-weight: 400;
  	line-height: 1.5;
  	color: #444;
  }
  .accordion-content h2{
    margin: 10px 0;
    line-height: 1.2;
  }
  .account-section .container{
    max-width: 1230px !important;
  }
  @media only screen and (max-width: 1199px){
    .account-list li a{
      font-size: 20px;
    }
  }
  @media only screen and (max-width: 991px){
    .account-list{
      row-gap: 16px;
    }
    .accordion-title{
      font-size: 16px;
    }
    .account-list li a{
      font-size: 16px;
    }
    .account-row{
      column-gap: 15px;
    }
    .accordion-box{
      padding: 14px 10px;
    }
    .account-accordion .accordion-content{
      padding: 10px;
    }
    .account-heading_text{
      margin-bottom: 50px;
      font-size: 42px;
    }
  }
  @media only screen and (max-width: 798px){
  	.account-row{
  		grid-template-columns: 1fr;
  		row-gap: 30px;
  	}
  }
  @media only screen and (max-width: 575px){
    .account-section{
      padding-top: 20px !important;
      padding-bottom: 30px !important;
    }
    .account-heading_text{
      font-size: 28px;
      margin-bottom: 40px;
    }
  }
</style>
<section
  class="account-section"
  style="padding-top: {{ section.settings.padding_top }}px;padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="container">
    <div class="account-content">
      <h2 class="account-heading_text">{{ page_title }}</h2>
    </div>
    <div class="account-row">
      <div class="account-col">
        <nav role="navigation">
          <ul class="account-list">
            {%- for link in section.settings.menu.links -%}
              <li>
                <a
                  href="{{ link.url }}"
                  {% if link.active %}
                    aria-current="page" class="active"
                  {% endif %}
                >
                  {{ link.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </nav>
      </div>
      <div class="account-col">
        {% for block in section.blocks %}
          {% if block.type == 'accordion_content' %}
            <div class="account-accordion">
              <div class="accordion-box">
                <h4 class="accordion-title">{{ block.settings.accordion_name }}</h4>
                <span class="accordion-icon"></span>
              </div>
              <div class="accordion-content">
                {{ block.settings.accordion_name_p }}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Help Accordion Menu",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks":[
    {
      "name": "Accordin Content",
      "type": "accordion_content",
      "settings":[
        {
          "type": "textarea",
          "id": "accordion_name",
          "label": "Accordion Text"
        },
        {
          "type": "richtext",
          "id": "accordion_name_p",
          "label": "Accordion Content"
        }
      ]
    }
  ],
  "presets":[
    {
      "name": "Help Accordion Menu"
    }
  ]
}
{% endschema %}

