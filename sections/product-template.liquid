<script>
document.addEventListener("DOMContentLoaded", function() {
  const stickyWrap = document.getElementById("stickyWrapper");
  const stickyBtn = document.getElementById("stickyAddMobile");
  const sizeSection = document.querySelector(".product-form__controls-group, .product-form__option, .swatch, .product-sizes");

  if (!stickyBtn || !sizeSection) return;

  let lastVisible = null;

  // âœ… Adjusted sensitivity (faster show)
  function checkSizeVisibility() {
    const rect = sizeSection.getBoundingClientRect();
    const vh = window.innerHeight || document.documentElement.clientHeight;

    // Slightly increased margin to show earlier
    const buffer = 30; // pixels above viewport
    const isVisible = rect.top < vh - buffer && rect.bottom > buffer;

    if (isVisible && lastVisible !== true) {
      stickyWrap.style.opacity = "0";
      stickyWrap.style.pointerEvents = "none";
      lastVisible = true;
    } else if (!isVisible && lastVisible !== false) {
      stickyWrap.style.opacity = "1";
      stickyWrap.style.pointerEvents = "auto";
      lastVisible = false;
    }
  }

  stickyBtn.addEventListener("click", function(e) {
    e.preventDefault();
    sizeSection.scrollIntoView({ behavior: "smooth", block: "center" });
  });

  // âœ… Smooth & immediate scroll handling
  window.addEventListener("scroll", () => checkSizeVisibility(), { passive: true });
  window.addEventListener("resize", checkSizeVisibility);

  checkSizeVisibility();
});
</script>






