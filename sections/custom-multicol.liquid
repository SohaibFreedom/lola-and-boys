<section class="custom-multi-column {{ section.settings.class }}">
  {% if section.settings.container %}
    <div class="container">
  {% endif %}
  {% if section.settings.heading %}
    <h2 class="custom-multi-col-heading">
      {{ section.settings.heading }}
    </h2>
  {% endif %}
  <div class="flex-container">
    {% for block in section.blocks %}
      <div class="flex-item">
        <h2>{{ block.settings.title }}</h2>
        <p>{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>

  {% if section.settings.container %}
    </div>
  {% endif %}
</section>

<style>
    .custom-multi-column .flex-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      gap: 2rem;
      max-width: 1000px;
      margin: 0 auto;
  }
      .custom-multi-column .flex-item h2 {
      margin-bottom: 10px;
      font-size: 20px;
    }

    .custom-multi-column .flex-item p {
      font-size: 16px;
    }

      .custom-multi-column .flex-item {
        flex: 1 1 200px; /* Adjust minimum column width here */

        padding: 10px;

      }
</style>

{% schema %}
{
  "name": "Custom Multi-Column ",
  "settings": [
     {
          "type": "text",
          "id": "class",
          "label": "class"
        },
      {
          "type": "text",
          "id": "heading",
          "label": "Title"
        },
    {
          "type": "checkbox",
          "id": "container",
          "label": "Show container",
      "default": false
        }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Column Content",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Your title here"
        },
        {
          "type": "liquid",
          "id": "description",
          "label": "Description",
          "default": "Your description here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Multi-Column"
    }
  ]
}
{% endschema %}
