{
  "name": "Search",
  "class": "search-template-section",
  "settings": [
    {
      "type": "text",
      "id": "para_text",
      "label": "Text",
      "default": "Tip: Try rephrasing your search term, or using a related term."
    },
    
    {
      "type": "checkbox",
      "id": "search_breadcrumb",
      "label": "Show breadcrumb",
