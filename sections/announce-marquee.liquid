    }
  ],
  "blocks": [
    {
      "type": "logo_block",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "logo_alt_text",
          "label": "Alt Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "announce marquee",
      "category": "Custom"
    }
  ]
}
{% endschema %}
