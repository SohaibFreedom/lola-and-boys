<style>
  .cont-wrap {
      width: 100%;
      overflow: hidden;
      background: #000000 !important;
      margin: 30px 0;
  }

  .scorri {
      position: relative;
      display: flex;
      width: 100%;
      justify-content: flex-start;
      overflow: hidden;
      white-space: nowrap;
  }

  .tithome-images {
      display: flex;
      animation: marquee 30s linear infinite;
      align-items: center;
      padding: 20px 0;
      gap: 2rem;
      margin:0;
  }

  .tithome-images li {
      display: inline-block;
      list-style: none;
      padding-right: 30px;
      margin-bottom:0 !important;
  }

  .tithome-images img {
      max-width: 70px;
      mix-blend-mode: difference;
      filter: invert(1);
  }

  @keyframes marquee {
      0% {
          transform: translateX(0);
      }
      100% {
          transform: translateX(-100%);
      }
  }
  @media only screen and (max-width: 768px) {
      .tithome-images li {
        padding-right: 10px;
      }

      .tithome-images img {
          max-width: 50px;
      }

      .tithome-images {
          padding: 10px 0;
          display: flex;
          align-items: center;
      }
    }
</style>

{% schema %}
{
  "name": "announce marquee",
  "settings": [
    {
        "type": "inline_richtext",
        "id": "heading",
