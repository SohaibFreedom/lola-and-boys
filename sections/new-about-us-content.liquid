<div>
    <meta charset="utf-8">
{% for block in section.blocks %}
  <p class="p1">
    {% if block.settings.new_about_image != blank %}
		<img src="{{ block.settings.new_about_image | img_url: 'master' }}" alt="">
    
    {% elsif block.settings.new_about_text != blank  %}
    	{{ block.settings.new_about_text  }}
    {% endif %}
    
  </p>

{% endfor %}
</div>

{% schema %}
  {
    "name": "New About Us",
    "settings": [],
	"blocks":[
      {
        "type": "image_and_text",
        "name": "Image With Text",
        "settings": [
          {
            "type": "image_picker",
            "id": "new_about_image",
            "label": "About Image"
          },
		  {
            "type": "text",
            "id": "new_about_text",
            "label": "About Text"
          }
		]
	  }		
	],
	"presets":[
	{
		"name": "New About Us"
	}	
	]
  }
{% endschema %}

