<div class="autoplay-video-section">
  <h2 class="video-col-head">{{ section.settings.heading }}</h2>
  <div class="video-wrapper">
    {% for block in section.blocks %}
      <div class="video-block">
        <video class="autoplay-video" loop="" playsinline="" autoplay="" defaultmuted="" muted="">
          <source src="{{ block.settings.video }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div>
    {% endfor %}
  </div>
</div>

<style>
     .autoplay-video-section {
        display: flex;
        flex-wrap: wrap;
        padding: 2rem 1rem;
    }
  .video-col-head {
      margin-bottom: 2rem;
  }
          .video-wrapper {
              display: flex;
              align-items: center;
              gap: 2rem;
          }

            .video-block {
              width: 100%;
              margin-bottom: 20px; /* Adjust spacing between blocks */
            }


      .autoplay-video {
          border: 3px solid #000;
          border-radius: 10px;
      }
</style>

{% schema %}
{
  "name": "Videos columns",
  "settings":[
    {
          "type": "text",
          "id": "heading",
          "label": "heading"
        }
  ],
  "blocks": [
    {
      "type": "videos",
      "name": "Video Block",
      "settings": [
        {
          "type": "url",
          "id": "video",
          "label": "Video"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Videos columns"
    }
  ]
}
{% endschema %}
