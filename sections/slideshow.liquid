{% comment %}
** Slideshow - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}

{% assign default = '1400x' %}
{% assign size1 = '480x' %}
{% assign size2 = '765x' %}
{% assign size3 = '900x' %}
{% assign size4 = '1000x' %}
{% assign size5 = '1100x' %}
{% assign size6 = '1300x' %}
{% assign size7 = '1500x' %}
{% assign size8 = '1700x' %}
{% assign size9 = '1900x' %}
{% assign size10 = '2000x' %}

{% if section.blocks.size > 0 %}

{% comment %}
<div class="hero-section-desktop hero-section--{{ section.id }}">
    <div class="container">
      {% comment %}
        <div class="hero-section__inner">
          <div class="hero-section__subtext"> <h3>{{ section.settings.paragraph }}</h3> </div>
          <div class="hero-section__heading"> <h1>{{ section.settings.headline }}</h1> </div>
          {% comment %}
            <a href="{{ section.settings.button_link }}" class="lola-and-btn">{{ section.settings.button_text }}</a>
          {% endcomment %}
        </div>
      {% endcomment %}
      <a href="{{ section.settings.bannre_link }}" class="">
      	<img  src="{{ section.settings.image | img_url: 'master' }}"/>
      </a>
    </div>
</div>
{% endcomment %}

{% comment %}
<style>
    {% if section.settings.bg_image %}
        @media (min-width: 768px) {
            .hero-section--{{ section.id }} {
                background-image: url('{{ section.settings.bg_image | img_url: '1440x', scale: 2 }}');
            }
        }
    {% endif %}
</style>
{% endcomment %}

  <section  id="homepage_slider-{{section.id}}"
        class="homepage-slideshow homepage-slideshow-mobile js-homepage-slideshow slideshow_animation--{{ section.settings.slideshow_animation }} {% if section.settings.slideshow_text_animation != '' %}text-animation--true{% endif %}"
        data-slider-id="homepage_slider-{{section.id}}"
        data-slideshow-speed="{{section.settings.slideshow_speed}}"
        data-slideshow-text-animation="{{section.settings.slideshow_text_animation}}"
        >
    
    {% for block in section.blocks %}
        <div class="gallery-cell slide-{{ forloop.index }}" {{ block.shopify_attributes }} data-block-id="{{block.id}}">
        {% if block.settings.image != nil or block.settings.image_mobile != nil or block.settings.mobilevideo != nil %}
          {% if  block.settings.image != blank %}
          <img class="desktop-slider"  src="{{ block.settings.image | img_url: '100x' }}"
                alt="{{ block.settings.image.alt | escape }}"
                class="lazyload {{ settings.image_loading_style }}"
                sizes="100vw"
                data-src="{{ block.settings.image | img_url: default }}"
                srcset="
                {{ block.settings.image | img_url: default }} {{default | replace: 'x', 'w'}},
                {{ block.settings.image | img_url: size1 }} {{size1 | replace: 'x', 'w'}},
                {{ block.settings.image | img_url: size2 }} {{size2 | replace: 'x', 'w'}},
                {{ block.settings.image | img_url: size3 }} {{size3 | replace: 'x', 'w'}},
                {{ block.settings.image | img_url: size4 }} {{size4 | replace: 'x', 'w'}},
                {{ block.settings.image | img_url: size5 }} {{size5 | replace: 'x', 'w'}},
                {{ block.settings.image | img_url: size6 }} {{size6 | replace: 'x', 'w'}},
                {{ block.settings.image | img_url: size7 }} {{size7 | replace: 'x', 'w'}},
                {{ block.settings.image | img_url: size8 }} {{size8 | replace: 'x', 'w'}},
                {{ block.settings.image | img_url: size9 }} {{size9 | replace: 'x', 'w'}},
                {{ block.settings.image | img_url: size10 }} {{size10 | replace: 'x', 'w'}}"
                 />
          {% elsif block.settings.mp4 != blank %}
              <a href="{{ block.settings.button1_link }}" ><video muted autoplay webkit-playsinline loop class="banner-video">
                <source src="{{ block.settings.mp4 }}" type="video/mp4">
              </video></a>
            
          {% endif %}
            {% if block.settings.mobilevideo  != blank %}
             <a href="{{ block.settings.button1_link }}" > <video  autoplay="" loop="" muted="muted" playsinline=""  class="banner-video banner-video-homemobile">
                <source src="{{ block.settings.mobilevideo }}" type="video/mp4">
              </video></a>
                {% elsif block.settings.mobilevideo == blank %}
          <img class="mobile-slider"  src="{{ block.settings.image_mobile | img_url: '100x' }}"
                alt="{{ block.settings.image.alt | escape }}"
                class="lazyload {{ settings.image_loading_style }}"
                sizes="100vw"
                data-src="{{ block.settings.image_mobile | img_url: default }}"
                srcset="
                {{ block.settings.image_mobile | img_url: default }} {{default | replace: 'x', 'w'}},
                {{ block.settings.image_mobile | img_url: size1 }} {{size1 | replace: 'x', 'w'}},
                {{ block.settings.image_mobile | img_url: size2 }} {{size2 | replace: 'x', 'w'}},
                {{ block.settings.image_mobile | img_url: size3 }} {{size3 | replace: 'x', 'w'}},
                {{ block.settings.image_mobile | img_url: size4 }} {{size4 | replace: 'x', 'w'}},
                {{ block.settings.image_mobile | img_url: size5 }} {{size5 | replace: 'x', 'w'}},
                {{ block.settings.image_mobile | img_url: size6 }} {{size6 | replace: 'x', 'w'}},
                {{ block.settings.image_mobile | img_url: size7 }} {{size7 | replace: 'x', 'w'}},
                {{ block.settings.image_mobile | img_url: size8 }} {{size8 | replace: 'x', 'w'}},
                {{ block.settings.image_mobile | img_url: size9 }} {{size9 | replace: 'x', 'w'}},
                {{ block.settings.image_mobile | img_url: size10 }} {{size10 | replace: 'x', 'w'}}"
                 />
               {% endif %}
        {% else %}
          {% capture i %}{% cycle "1", "2" %}{% endcapture %}
          {{ 'lifestyle-' | append: i | placeholder_svg_tag: 'placeholder-svg placeholder-svg--slideshow' }}
        {% endif %}
          {% unless block.settings.button1_link != blank and block.settings.button2_link != blank %}
            {% if block.settings.button1_link != blank %}
              <a href="{{ block.settings.button1_link }}" class="banner-full-link">
                {{ block.settings.title }}
              </a>
            {% elsif block.settings.button2_link != blank %}
              <a href="{{ block.settings.button2_link }}" class="banner-full-link">
                {{ block.settings.title }}
              </a>
            {% endif %}
          {% endunless %}
          {% unless block.settings.pretext == blank and block.settings.title == blank and block.settings.subtitle == blank and block.settings.button1 == blank and block.settings.button2 == blank %}
            <div class="caption position-{{block.settings.text_position}} js-caption">
                <div class="caption-content
                            caption-background-{{block.settings.caption_background}}
                            caption-transparency-{{ block.settings.caption_background_transparency }}
                            align-{{block.settings.text_align}}">
                  {% if block.settings.pretext != blank %}
                    <div class="pretext">
                      {{ block.settings.pretext }}
                    </div>
                  {% endif %}
                  {% if forloop.first == true and block.settings.title != blank %}
                    <h1 class="headline">
                      {{ block.settings.title }}
                    </h1>
                  {% elsif block.settings.title != blank %}
                    <p class="headline">
                      {{ block.settings.title }}
                    </p>
                  {% endif %}
                  {% if block.settings.subtitle != blank %}
                    <div class="subtitle">
                      {{ block.settings.subtitle }}
                    </div>
                  {% endif %}
                  {% if block.settings.button1 != blank %}
                    <a {% if block.settings.button1_link != blank %}href="{{ block.settings.button1_link }}"{% endif %} class="action_button first_button highlight-{{block.settings.button1_highlight}}">
                      {{ block.settings.button1 }}
                    </a>
                  {% endif %}
                  {% if block.settings.button2 != blank %}
                    <a {% if block.settings.button2_link != blank %}href="{{ block.settings.button2_link }}"{% endif %} class="action_button second_button highlight-{{block.settings.button2_highlight}}">
                      {{ block.settings.button2 }}
                    </a>
                  {% endif %}
                </div>
              </div>
          {% endunless %}
        </div>
    {% endfor %}
  </section>
{% endif %}

{% schema %}

{
  "name": "Slideshow",
  "class": "slideshow-section under-menu",
  "settings": [
    {
      "type": "select",
      "id": "slideshow_text_animation",
      "label": "Text animation",
      "options": [
        {
          "value": "",
          "label": "None"
        },
        {
          "value": "fadeIn",
          "label": "Fade In"
        },
        {
          "value": "fadeInUp",
          "label": "Fade Up"
        },
        {
          "value": "fadeInDown",
          "label": "Fade Down"
        }
      ],
      "default": "fadeInDown"
    },
    {
      "type": "select",
      "id": "slideshow_animation",
      "label": "Gallery transition",
      "options": [
        {
          "value": "slide",
          "label": "Slide"
        },
        {
          "value": "fade",
          "label": "Fade"
        }
      ],
      "default": "slide"
    },
	{
