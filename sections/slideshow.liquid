          "id" : "headline",
          "label" : "Headline Text"
      },
      {
          "type" : "textarea",
          "id" : "paragraph",
          "label" : "Sub Headline Text"
      },
	  {
          "type" : "url",
          "id" : "bannre_link",
          "label" : "Banner Link"
      },
      {
          "type" : "url",
          "id" : "button_link",
          "label" : "Button Link"
      },
      {
          "type" : "text",
          "id" : "button_text",
          "label" : "Button Text"
      },
	  {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
      },
      {
          "type" : "image_picker",
          "id" : "bg_image",
          "label" : "Background Image (Desktop)"
      },
    {
      "type": "range",
      "id": "slideshow_speed",
      "label": "Change slides every",
      "min": 4,
      "max": 30,
      "step": 1,
      "default": 6,
      "unit": "sec"        
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Desktop Image"
        },
		{
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image"
      },
      {
        "type": "text",
        "id": "mp4",
        "label": "Video Link"
      },
            {
        "type": "text",
        "id": "mobilevideo",
        "label": "Mobile Video Link"
      },
        {
          "type": "richtext",
          "id": "pretext",
          "label": "Preheading"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Your headline"
        },
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Subheading"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Text position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "checkbox",
          "id": "caption_background",
          "label": "Display text background"
        },
        {
          "type": "checkbox",
          "id": "caption_background_transparency",
          "label": "Enable text background transparency"
        },
        {
          "type": "text",
          "id": "button1",
          "label": "First button label"
        },
        {
          "type": "url",
          "id": "button1_link",
          "label": "First button link"
        },
        {
          "type": "checkbox",
          "id": "button1_highlight",
          "label": "Highlight first button"
        },
        {
          "type": "text",
          "id": "button2",
          "label": "Second button label"
        },
        {
          "type": "url",
          "id": "button2_link",
          "label": "Second button link"
        },
        {
          "type": "checkbox",
          "id": "button2_highlight",
          "label": "Highlight second button"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Slideshow",
    "category": "Image",
    "settings": {
    },
    "blocks": [
      {
        "type": "image",
        "settings": {
          "image": "",
