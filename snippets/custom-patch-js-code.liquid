let _nearIO, _keepIO;

function _loadImg(img) {
  if (!img.dataset.src || img.dataset._state === 'loaded') return;
  img.onload = () => img.classList.add('is-loaded');
  img.src = img.dataset.src;              
  img.dataset._state = 'loaded';
}

function _unloadImg(img) {
  if (img.dataset._state !== 'loaded') return;
  img.removeAttribute('src');              
  img.classList.remove('is-loaded');
  img.dataset._state = 'idle';
}

function _ensureObservers() {
  if (!_nearIO) {
    
    _nearIO = new IntersectionObserver((entries, obs) => {
      entries.forEach(e => {
        if (e.isIntersecting) _loadImg(e.target);
      });
    }, { root: null, rootMargin: '400px 0px', threshold: 0.01 });
  }
  if (!_keepIO) {
   
    _keepIO = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        const img = e.target;
        if (e.isIntersecting) {
          img.dataset._keep = '1';        
        } else if (img.dataset._keep === '1') {
          img.dataset._keep = '0';        
          _unloadImg(img);
        }
      });
    }, { root: null, rootMargin: '1200px 0px', threshold: 0 });
  }
}

function trackVirtualLazyImage(img) {
  _ensureObservers();
  _nearIO.observe(img);
  _keepIO.observe(img);
}
