  // How many embroidery items would remain after this removal
  const embroideryRemaining = embroideryTotalBefore - embroideryRemoved;

  const updates = {};

  // Remove group items, BUT keep Stitching Fee if embroidery will still remain
  groupItems.forEach(item => {
    if (isStitchingFeeItem(item)) {
      if (embroideryRemaining <= 0) updates[item.key] = 0; // remove fee only if last embroidery is gone
      return; // keep fee if other embroidery products still exist
    }
    updates[item.key] = 0;
  });

  // If this was the last embroidery item, remove ANY stitching-fee item(s) left in cart (even if not in the group)
  if (embroideryRemaining <= 0) {
    items.forEach(item => {
      if (isStitchingFeeItem(item)) updates[item.key] = 0;
    });
  }

  // Nothing to update
  if (!Object.keys(updates).length) return;

  await fetch('/cart/update.js', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ updates })
  });
}

