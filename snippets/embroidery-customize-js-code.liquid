window.renderEmbroideryCart = async function () {

  const wrapper = document.querySelector('.custom-embroidery-cart-drawer-for-app-main-wrapper');
  const counterDiv = document.querySelector('.custom_embroidery_cart_item_counter');
  const totalPriceDiv = document.querySelector('.custom_embroidery_cart_item_price');

  if (!wrapper) return;


  /* MOBILE UI FIX */
  if (window.innerWidth <= 900) {
    document.querySelectorAll('.patches-customization-container, .patches-full-screen-icon')
      .forEach(el => el.style.display = 'none');

  const offcanvasMenu = document.querySelector('.emb_offcanvas');
    if (offcanvasMenu) {
      offcanvasMenu.style.setProperty('height', '100%', 'important');
      offcanvasMenu.style.setProperty('min-height', '100vw', 'important');
    }
  }


 const editor = document.querySelector('#emb_variants-selected-sidebar');
if (editor) editor.style.visibility = 'hidden';

  /* Show overlay */
  const overlay = document.querySelector('.embroidery-patches-customization-container-overly');
  if (overlay) {
    overlay.style.display = 'block';
    overlay.style.transition = 'opacity 0.3s ease';
  }

  /* Slide Drawer */
  const drawer = document.querySelector('.custom-embroidery-cart-drawer-for-app');
  console.log(drawer);
  if (drawer) {
    drawer.style.display = 'block';
    drawer.style.position = 'absolute';
    drawer.style.top = '0';
    drawer.style.right = '0';
    drawer.style.height = '100%';
    drawer.style.width = '100%';
    drawer.style.background = 'white';
    drawer.style.boxShadow = '-3px 0 8px rgba(0,0,0,0.2)';
    drawer.style.transform = 'translateX(100%)';
    drawer.style.transition = 'transform 0.4s ease';
    requestAnimationFrame(() => (drawer.style.transform = 'translateX(0)'));
  }

  /* LOAD CART DATA */
  try {
  const cart = await getCart();
  const HIDE_VARIANT_ID = 43443727040614;

  let items = cart.items || [];

  // âœ… Shopify cart.js me "id" = variant id hota hai
  items = items.filter(i => Number(i.id) !== HIDE_VARIANT_ID);

  /* âœ… Exclude product (works whether you pass product_id OR variant_id) */
  const EXCLUDED_ID = 42085140430950;
  const visibleItems = items.filter(i => {
    const variantId = Number(i.variant_id ?? i.id);
    const productId = Number(i.product_id);
    return variantId !== EXCLUDED_ID && productId !== EXCLUDED_ID;
  });

  const parentItems = visibleItems.filter(
    i => !i.properties || (!i.properties._ChildOf && !i.properties._parent_variant)
  );
  const childItems = visibleItems.filter(
    i => i.properties && (i.properties._ChildOf || i.properties._parent_variant)
  );

  /* Counters */
  if (counterDiv)
    counterDiv.textContent = `Subtotal (${visibleItems.length} item${visibleItems.length !== 1 ? 's' : ''})`;

  if (totalPriceDiv)
    totalPriceDiv.textContent = Shopify.formatMoney(cart.total_price, "{{ shop.money_format }}");

  if (parentItems.length === 0) {
    wrapper.innerHTML = '<p class="empty-msg">Your cart is empty.</p>';
    return;
  }

  /* Build HTML */
  let html = '';

  parentItems.forEach(parent => {
    const props = parent.properties || {};
    const isCustomized = props._Parent === 'Embroidery Product' || props._customized_image_url_front;

    const relatedChildren = childItems.filter(
      child =>
        child.properties &&
        (child.properties._parent_variant == parent.variant_id ||
          child.properties._ChildOf === '1') &&
        child.properties._Session === props._Session
    );

    const parentTotal =
      parent.final_line_price +
      relatedChildren.reduce((sum, c) => sum + c.final_line_price, 0);

    const img =
      props._customized_image_url_front ||
      parent.image ||
      "{{ 'no-image.png' | asset_url }}";

    const latestSessionId = localStorage.getItem('latestSessionId');
    const isLatestProduct =
      isCustomized && props._Session && props._Session === latestSessionId;

    const buttonsHTML = isCustomized
      ? `
        ${isLatestProduct ? `<div class="custom-embroidery-cart-app-edit-btn" data-key="${parent.key}" data-session="${props._Session}">Edit</div>` : ''}
        <div class="custom-cart-app-remove-btn" data-key="${parent.key}">Remove</div>
        <div class="custom-cart-app-make-another-btn">Create Another</div>`
      : `<div class="custom-cart-app-remove-btn" data-key="${parent.key}">Remove</div>`;

    html += `
      <div class="custom-cart-item" data-key="${parent.key}">
        <div class="custom-cart-item-img">
          <img src="${img}" alt="${parent.title}" loading="lazy">
        </div>
        <div class="custom-cart-item-info">
          <div class="custom-cart-app-product-title">${parent.title}</div>
          <p class="custom-cart-app-custom-price">
            ${Shopify.formatMoney(parentTotal, "{{ shop.money_format }}")}
          </p>
          <div class="custom-cart-app-custom-cart-actions">
            ${buttonsHTML}
          </div>
        </div>
      </div>
    `;
  });

  localStorage.removeItem('latestSessionId');

  wrapper.innerHTML = html;
  bindCartButtons();
} catch (err) {
    console.error(err);
    wrapper.innerHTML = '<p class="error-msg">Failed to load cart.</p>';
  }
};

