<script>
document.addEventListener("DOMContentLoaded", () => {
  // ðŸŽ¯ Sare swatch inputs + labels (Style, Color, Size, etc.)
  const swatches = document.querySelectorAll(
    ".swatch input[type='radio'], .swatch label"
  );

  swatches.forEach((swatch) => {
    ["click", "touchstart", "change"].forEach((eventType) => {
      swatch.addEventListener(eventType, () => {
        // ðŸ” Related input nikaalo (agar label click hua ho)
        let input = swatch.matches("input[type='radio']") ? swatch : null;

        if (!input && swatch.tagName === "LABEL") {
          const forId = swatch.getAttribute("for");
          if (forId) {
            input = document.getElementById(forId);
          }
        }

        if (!input) return;

        // ðŸ·ï¸ Is swatch ka group wrapper & title (Style / Color / Size)
        const wrapper = input.closest(".swatch");
        const titleEl = wrapper ? wrapper.querySelector(".option_title") : null;
        const title = titleEl ? titleEl.textContent.toLowerCase().trim() : "";

        // âœ… Sirf Style + Color/Colour pe reload
        const isStyleOrColor =
          title.includes("style") ||
          title.includes("color") ||
          title.includes("colour");

        if (!isStyleOrColor) {
          // Size waghera yahan se exit ho jaye ga â€“ NO reload
          return;
        }

        if (!swatch.classList.contains("swatch-reloading")) {
          swatch.classList.add("swatch-reloading");
          setTimeout(() => {
            location.reload(); // ðŸ‘ˆ same reload
          }, 1000);
        }
      });
    });
