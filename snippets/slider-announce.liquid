<style>
             .accounecment_slider {
               background-color: #faddff;
             }
            .announce-bar-slide-arrows {
               cursor: pointer;
               margin: 6px;

             }
          .announce-slide_box {
              max-width: 800px !important;
              margin: 0 auto;
          }
             .accounecment_slider .announce-bar-slide {
               margin: 0;
               display: flex !important;
               justify-content: center;
               padding: 4px;
               gap: 0;
             }
             .announce-bar-slide-slide {
               margin: 5px 0;

             }
             .announce-bar-slide-content {
               margin: 0;
               text-align: center;
               font-size: 16px !important;

             }
             .announce-bar-slide-content>a {
               text-decoration: none;
               color: #3f3e3ed6;
             }
            @media only screen and (max-width:768px) and (min-width:320px){

               .announce-bar-slide-content {
                 font-size: 11px !important;
               }
              .announce-bar-slide-slide {
          margin: 0 !important;
      }
          .next-announce-bar-slide {
            position: absolute;
            right: 10px;
            top: 3px;
        }
        .prev-announce-bar-slide {
            position: absolute;
            left: 10px;
            top: 3px;
        }
             }
      @media only screen and (max-width:479px) and (min-width:320px){


  .next-announce-bar-slide svg, .prev-announce-bar-slide svg  {
      width: 10px !important;
  }

    }
</style>
{% if block.settings.content != 'blank' %}
  <div class="announce-bar-slide-wrapper accounecment_slider">
    <div class="announce-slide_box">
      <div class="announce-bar-slide">
        <div class="prev-announce-bar-slide announce-bar-slide-arrows">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" height="15" width="15" fill="#3f3e3ed6">
            <path d="M32 15H3.41l8.29-8.29-1.41-1.42-10 10a1 1 0 0 0 0 1.41l10 10 1.41-1.41L3.41 17H32z"
              data-name="4-Arrow Left" />
          </svg>
        </div>

        <div class="announce-bar-slide-slide">
          {% for block in section.blocks %}
            <span class="announce-bar-slide-content">
              <a href="{{ block.settings.link }}">{{ block.settings.content }}</a></span
            >
          {% endfor %}
        </div>

        <div class="next-announce-bar-slide announce-bar-slide-arrows">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" height="15" width="15" fill="#3f3e3ed6">
            <path d="m31.71 15.29-10-10-1.42 1.42 8.3 8.29H0v2h28.59l-8.29 8.29 1.41 1.41 10-10a1 1 0 0 0 0-1.41z"
              data-name="3-Arrow Right" />
          </svg>
        </div>
      </div>
    </div>
  </div>
{% endif %}
